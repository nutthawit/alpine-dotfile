#!/bin/ash

# Source global definitions
if [ -r "/etc/ashrc" ]; then
    source /etc/ashrc
fi

# Add my scripts
if [ -f "${HOME}/scripts" ]; then
    PATH="${HOME}/scripts:${PATH}"
fi

export PATH

# If startship is installed do:
if command -v startship > /dev/null; then
    eval "$(starship init bash)"
fi

# If fzf is installed do:
if [ -f "${HOME}/.fzf" ]; then
    eval "$(fzf --bash)"
fi

alias sudo=doas
alias ss=doas
alias bye="doas poweroff"
alias seesoon="doas reboot"

# Git aliases
alias gtree="git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue) <%an> %Creset' --abbrev-commit"
